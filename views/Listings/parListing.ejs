<% layout("/layouts/boilerPlate") %>

    <body>
        <h1>
            <%= listing.title %>
        </h1>
        <img src="<%= listing.image %>" alt="<%= listing.title %>">

        <ul>
            <li>
                <%= listing.description %>
            </li>
            <li>&#8377;
                <%= listing.price.toLocaleString("en-IN") %>
            </li>
            <li>
                <%= listing.location %>
            </li>
            <li>
                <%= listing.country %>
            </li>
        </ul>
        <a href="/listings/<%= listing._id %>/edit">Edit</a>
        <br>
        <br>
        <form action="/listings/<%= listing._id %>?_method=DELETE" method="post"><button>Delete</button></form>

    </body>