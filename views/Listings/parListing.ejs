<% layout("/layouts/boilerPlate") %>

    <body>

        <div class="row d-md-flex justify-content-center">
            <div class="card mt-2 col-md-8">
                <img src="<%= listing.image %>" class="card-img-top" alt="..." style="height: 50vh;">
                <div class="card-body mt-2 ms-2">
                    <h5 class="card-title">
                        <%= listing.title %>
                    </h5>
                    <p>
                        <%= listing.description %>
                    </p>
                    <p><b>
                            &#8377;
                            <%= listing.price.toLocaleString("en-IN") %> / night
                    </p></b>
                    <p>
                        <%= listing.location %>,
                            <%= listing.country %>
                    </p>
                    <div class="d-flex justify-content-center">
                        <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary me-3">Edit</a>
                        <form action="/listings/<%= listing._id %>?_method=DELETE" method="post"><button
                                class="btn btn-danger">Delete</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>

    </body>